              <div class="more-events-2"><a href="./all-events.ejs" class="more-events-lnk-2">Learn more</a></div>
            </div>
          </div>
          <div class="events-past">
            <div class="events-past-title">
              <h1>Past</h1>
            </div>
            <div class="events-card-section-3">
             <div class="events-card-section-3-1"> <%- include ('events-card.ejs') -%></div>
