              <div class="events-card-section-3-1"><%- include ('events-card.ejs') -%></div>
              <div class="events-card-section-3-1"><%- include ('events-card.ejs') -%></div>
              <div class="more-events-3"><a href="./all-events.ejs" class="more-events-lnk-3">Learn more</a></div>
